root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,json,ts,tsx}]
indent_style = space
indent_size = 2

[*.{diff,md,markdown}]
trim_trailing_whitespace = false

[*.md]
max_line_length = 0

[*.yml]
indent_style = space
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = 0

[Makefile]
indent_style = tab
